{
  "name": "recomd",
  "author": "Radiology Partners",
  "version": "1.99.0",
  "main": "out-tsc/app/main/main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve -c web -o",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "copy-files-from-to --mode development && npm run build -- --configuration development",
    "build:prod": "copy-files-from-to --mode production && npm run electron:serve-tsc && ng build --base-href ./ --configuration production",
    "web:build": "npm run build -- --configuration web",
    "watch": "ng build --watch --configuration development",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:tsc": "tsc -p tsconfig.json",
    "electron:serve": "copy-files-from-to --mode development && wait-on tcp:8080 && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:dev && electron .",
    "electron:build": "npm run build:prod && electron-builder build --win --publish never",
    "electron:mac": "npm run build:prod && electron-builder build --mac --x64 --publish never",
    "electron:test": "npm run build:prod && electron-builder build --linux --publish never",
    "test": "ng test",
    "test:prod": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "lint": "ng lint",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "wait-on http://localhost:8080 -t 120000 && cypress run --browser chrome"
  },
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  },
  "copyFiles": [
    {
      "from": {
        "default": "src/environments/environment.dev.ts",
        "production": "src/environments/environment.prod.ts",
        "web": "src/environments/environment.web.ts"
      },
      "to": "src/environments/environment.ts"
    }
  ],
  "dependencies": {
    "@angular/animations": "^16.0.0",
    "@angular/cdk": "^16.0.0",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/material": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "@faker-js/faker": "^7.6.0",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "rudder-sdk-js": "2.29.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "wait-on": "^7.0.1",
    "zone.js": "^0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.0",
    "@angular-eslint/builder": "16.0.1",
    "@angular-eslint/eslint-plugin": "16.0.1",
    "@angular-eslint/eslint-plugin-template": "16.0.1",
    "@angular-eslint/schematics": "^16.0.1",
    "@angular-eslint/template-parser": "16.0.1",
    "@angular/cli": "~16.0.0",
    "@angular/compiler-cli": "^16.0.1",
    "@cypress/schematic": "^2.5.0",
    "@electron/asar": "^3.2.4",
    "@types/jasmine": "~4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "copy-files-from-to": "^3.8.0",
    "cypress": "12.12.0",
    "cypress-log-to-output": "^1.1.2",
    "electron": "^24.1.1",
    "electron-builder": "^24.3.0",
    "electron-debug": "^3.2.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.39.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "^4.9.5"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
